<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>SignUp on Wanderlust</h1>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" placeholder="Enter your username" class="form-control"
                        id="username" required />
                    <div class="invalid-feedback fw-bold">
                        Username should be valid!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" placeholder="Enter your email" class="form-control" id="email"
                        required />
                    <div class="invalid-feedback fw-bold">
                        Email should be valid!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" placeholder="Enter your password" class="form-control"
                        id="password" required />
                    <div class="invalid-feedback fw-bold">
                        Password should be valid!
                    </div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>